<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodDeliveryApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondaryContainer">@color/white</item>

    </style>

    <style name="Theme.FoodDeliveryApp" parent="Base.Theme.FoodDeliveryApp" />

    <style name="MyBottomAppBar" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="backgroundTint">@color/white</item>
        <item name="itemRippleColor">@android:color/transparent</item>
    </style>


    <style name="ProfileImageCardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ProfileImageShape</item>
    </style>

    <style name="ProfileImageShape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">100dp</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/shape_dialog</item>
        <item name="android:windowAnimationStyle">@style/animation</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>