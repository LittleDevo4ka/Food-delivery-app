<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="148dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">
    
    <TextView
        android:id="@+id/category_name_card"
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пекарни и кондитерские"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="start"
        android:elevation="1dp"
        
        app:layout_constraintTop_toTopOf="@id/category_card_image"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/category_card_image"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/category_card_image"

        android:layout_width="0dp"
        android:layout_height="148dp"
        android:elevation="0dp"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>