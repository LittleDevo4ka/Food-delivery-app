<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginEnd="8dp">

    <TextView
        android:id="@+id/dish_tag_name_card"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Все блюда"
        android:elevation="1dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:maxLines="1"

        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <Button
        android:id="@+id/dish_tag_button_card"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:elevation="0dp"
        android:backgroundTint="@color/unchecked_button"
        app:cornerRadius="10dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/dish_tag_name_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/dish_tag_name_card"/>

</androidx.constraintlayout.widget.ConstraintLayout>