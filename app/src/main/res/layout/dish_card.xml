<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wasteid_image_frame_dish_card"

        android:layout_width="0dp"
        android:layout_height="148dp"
        android:background="@drawable/shape_container"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/dish_card_image"

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:clickable="true"
            android:foreground="@drawable/ripple"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dish_card_name"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Салат по восточному"
        android:textSize="14dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toBottomOf="@id/wasteid_image_frame_dish_card"
        app:layout_constraintStart_toStartOf="@id/wasteid_image_frame_dish_card" />




</androidx.constraintlayout.widget.ConstraintLayout>